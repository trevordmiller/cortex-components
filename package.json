{
  "name": "cortex-components",
  "version": "0.1.8",
  "description": "The shared components for Cortex clients",
  "repository": "trevordmiller/cortex-components",
  "license": "MIT",
  "author": "Trevor D. Miller (https://trevordmiller.com)",
  "main": "build/index.js",
  "files": [
    "package.json",
    "README.md",
    "LICENSE.md",
    "build"
  ],
  "scripts": {
    "dev:queries": "yarn queries -- --watch",
    "dev:build": "yarn build -- --watch",
    "dev:test": "yarn test -- --watch",
    "verify": "yarn test && yarn lint && yarn typecheck && yarn queries && yarn build",
    "test": "jest src",
    "lint": "eslint src",
    "typecheck": "flow",
    "queries": "node scripts/getApiSchema.js && relay-compiler --src src --schema schema.graphql",
    "build": "babel src -d build",
    "release": "git checkout master && git pull && yarn queries && yarn build && yarn version && git push && git push --tags && yarn publish"
  },
  "babel": {
    "presets": [
      "env",
      "flow",
      "react"
    ],
    "plugins": [
      "relay"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/display-name": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-relay": "1.0.0-rc.2",
    "babel-preset-env": "^1.3.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.44.2",
    "graphql": "^0.9.3",
    "jest": "^19.0.2",
    "node-fetch": "^1.6.3",
    "relay-compiler": "1.0.0-rc.2"
  },
  "dependencies": {
    "react": "^15.5.4",
    "react-native-web": "^1.0.81",
    "react-relay": "1.0.0-rc.2"
  }
}
